<div class="video">
    <div class="container">
          <div class="row">
            <div class="col-lg-6 col-sm-6 col-md-6">
                <h2 class="os-animation" data-os-animation="fadeIn" data-os-animation-delay="0.3s">{{ page.title }}</h2>
                <span class="line os-animation" data-os-animation="fadeIn" data-os-animation-delay="0.4s"></span>
                <div class="os-animation" data-os-animation="fadeIn" data-os-animation-delay="0.5s">{{ content }}</div>
                {% if page.header.link_url %}
                <a href="{{ page.header.link_url }}" class="os-animation" data-os-animation="fadeIn" data-os-animation-delay="0.7s">{{ page.header.link_label|markdown }}</a>
                {% endif %}
            </div>
        </div>
    </div>
    {% if page.header.right_image %}
    <div class="laptop os-animation" data-os-animation="fadeIn" data-os-animation-delay="0.5s">
        {{ page.media.images[page.header.right_image].cache.html('', page.header.right_image_alt) }}
    </div>
    {% endif %}
</div>
